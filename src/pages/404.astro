---
import Layout from "@/layouts/Layout.astro";

import { Icon } from "astro-icon/components";
---

<Layout title="404" description="404 Not Found">
  <section class="prose dark:prose-invert max-w-1xl mx-auto py-24 text-center">
    <h1
      class="text-6xl font-bold mb-4 bg-clip-text text-transparent animate-gradient bg-300% bg-gradient-to-r from-pink-500 via-purple-500 to-indigo-500"
    >
      (・-・\)`
    </h1>

    <p class="text-xl mb-8">Not Found</p>

    <button onclick="history.back()" aria-label="back">
      <Icon
        name="mdi:keyboard-backspace"
        class="w-12 h-12 hover:text-(--a-text-color)"
      />
    </button>
  </section>
</Layout>

<style>
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .animate-gradient {
    background-size: 300% 300%;
    animation: gradient 5s ease infinite;
  }
</style>
